<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.loopr.wallet.wallet">
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application>
        <activity
            android:name=".ui.activity.CreateWalletActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.PasswdConfirmActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".ui.activity.ImportWalletActivity"
            android:screenOrientation="portrait" />

        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".ui.activity.ManageWalletActivity" />

        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".ui.activity.CongrateActivity" />

        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name=".ui.activity.BackUpActivity" />

    </application>
</manifest>
