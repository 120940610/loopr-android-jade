<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <TextView
        android:id="@+id/wallet_mn_verify_tip"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_12"
        android:text="@string/wallet_mn_verify_tip"
        android:layout_below="@+id/title_bar"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/wallet_mn_verify_word1"
        android:layout_width="@dimen/wallet_mn_verify_width"
        android:layout_height="@dimen/wallet_mn_verify_height"
        android:layout_marginTop="@dimen/wallet_mn_verify_margin_top"
        android:background="@drawable/wallet_rectangle_white_bg"
        android:gravity="center"
        android:text="test1"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/wallet_mn_verify_word2"
        android:layout_width="@dimen/wallet_mn_verify_width"
        android:layout_height="@dimen/wallet_mn_verify_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/wallet_rectangle_white_bg"
        android:gravity="center"
        android:text="test2"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/wallet_mn_verify_word3"
        android:layout_width="@dimen/wallet_mn_verify_width"
        android:layout_height="@dimen/wallet_mn_verify_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/wallet_rectangle_white_bg"
        android:gravity="center"
        android:text="test3"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/wallet_mn_verify_word4"
        android:layout_width="@dimen/wallet_mn_verify_width"
        android:layout_height="@dimen/wallet_mn_verify_height"
        android:layout_marginTop="20dp"
        android:background="@drawable/wallet_rectangle_white_bg"
        android:gravity="center"
        android:text="test4"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_16" />
</LinearLayout>
